{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@common/*": [
                "common/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictFunctionTypes": false,
        "alwaysStrict": false,
        "noImplicitThis": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}