# Environment
NODE_ENV=development

# Server
PORT=9168
API_VERSION=v1

# Client
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/styler
MONGODB_TEST_URI=mongodb://localhost:27017/styler_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=styler-uploads

# AWS SES (Email)
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@styler.com
SES_FROM_NAME=Styler

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Razorpay (Payment)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Platform Settings
PLATFORM_COMMISSION_PERCENTAGE=15
HOME_SERVICE_FEE_PERCENTAGE=20
MAX_UPLOAD_SIZE_MB=5
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
